<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/btn_artist_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="15dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_artist_item_library"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/artist_img" />

        <TextView
            android:id="@+id/txt_name_Artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Bad Bunny"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_tipo_library"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Artist"
            android:textColor="@color/menos_white"
            android:textSize="10sp"
            android:textStyle="normal" />
    </LinearLayout>


</LinearLayout>