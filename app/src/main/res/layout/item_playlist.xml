<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_cancionPlaylist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_cancionPlaylist"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/javier_solis" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="332dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_tituloCancionPlaylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="Tu Voz - Versión Trío"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.091"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_artistaCancionPlaylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:text="Javier Solís"
                android:textAlignment="center"
                android:textColor="@color/menos_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.194"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_heartItemPlaylist"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="80dp"
                android:background="@drawable/ic__heart2"
                android:backgroundTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/txt_artistaCancionPlaylist"
                app:layout_constraintStart_toEndOf="@+id/txt_tituloCancionPlaylist"
                app:layout_constraintTop_toTopOf="@+id/txt_tituloCancionPlaylist"
                app:layout_constraintVertical_bias="0.6"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/btn_dotsItemPlaylist"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="28dp"
                android:background="@drawable/ic__962b4b9495c7d5510d4b9f9e2e866fb"
                app:layout_constraintBottom_toBottomOf="@+id/btn_heartItemPlaylist"
                app:layout_constraintStart_toEndOf="@+id/btn_heartItemPlaylist"
                app:layout_constraintTop_toTopOf="@+id/btn_heartItemPlaylist"
                app:layout_constraintVertical_bias="0.75"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>